generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vehicles     Vehicle[]
  transactions Transaction[]
  maintenances Maintenance[]
  shifts       Shift[] 

  @@map("users")
}

model Shift {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  
  userId    String
  vehicleId String
  shiftStatus ShiftStatus @default(OPEN)

  user    User    @relation(fields: [userId], references: [id])
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  transactions Transaction[]

  @@map("shift")
}

model Vehicle {
  id        String   @id @default(uuid())
  userId    String
  model     String
  plate     String   @unique @db.VarChar(7)
  currentKm Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  maintenances Maintenance[]
  transactions Transaction[]
  shifts       Shift[]

  @@map("vehicles")
}

model Transaction {
  id          String            @id @default(uuid())
  userId      String
  vehicleId   String?
  shiftId     String?           
  type        TransactionType
  description String?
  category    CategoryType
  kmAtTime    Int?
  amount      Decimal           @db.Decimal(10, 2)
  status      TransactionStatus @default(COMPLETED)
  date        DateTime          @default(now())
  createdAt   DateTime          @default(now())

  user    User    @relation(fields: [userId], references: [id])
  vehicle Vehicle? @relation(fields: [vehicleId], references: [id])
  shift   Shift?   @relation(fields: [shiftId], references: [id])

  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CategoryType {
  RIDE_EARNING
  FUEL
  MAINTENANCE
  FOOD
  INSURANCE
  TAX
  OTHER
}

model Maintenance {
  id              String            @id @default(uuid())
  userId          String
  vehicleId       String
  itemName        String
  controlBy       MaintenanceControl
  controlValue    Int               @default(0)
  //TODO - Eu preciso colocar o valor de controle,
  // Atualizar apenas os valores de acordo com o maintenanceControl
  lastChangedDate DateTime?
  nextChangeDate  DateTime?
  lastChangedKm   Int?
  nextChangeKm    Int?
  cost            Decimal?          @db.Decimal(10, 2)
  status          MaintenanceStatus @default(PENDING)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  vehicle Vehicle @relation(fields: [vehicleId], references: [id])

  @@map("maintenances")
}

enum MaintenanceControl {
  KM
  TIME
}

enum MaintenanceStatus {
  OK
  WARNING
  EXPIRED
  PENDING
}

enum TransactionStatus {
  COMPLETED
  PENDING
}

enum ShiftStatus {
  OPEN
  CLOSED
  PAUSED
}